@using ArtemisBanking.Core.Application.ViewModels.Transacciones
@model ConfirmPayCreditCardViewModel

@{
    ViewData["Title"] = "Confirmar Pago a Tarjeta";
    Layout = "_LayoutAnonymous";
}

<div class="container mt-4">
    <h2>Confirmar Pago a Tarjeta de Crédito</h2>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-credit-card"></i> Detalles del Pago
            </h5>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Titular de la tarjeta:</strong> @Model.CardHolderName</p>
                    <p><strong>Tarjeta:</strong> ****@Model.LastFourDigits</p>
                    <p>
                        <strong>Deuda actual:</strong>
                        <span class="text-danger">@Model.CurrentDebt.ToString("C2")</span>
                    </p>
                </div>

                <div class="col-md-6">
                    <p><strong>Cuenta origen:</strong> @Model.AccountNumber</p>
                    <p>
                        <strong>Monto a pagar:</strong>
                        <span class="text-success fw-bold">@Model.Amount.ToString("C2")</span>
                    </p>
                </div>
            </div>

            @if (Model.Amount > Model.CurrentDebt)
            {
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Nota:</strong>
                    El monto ingresado (@Model.Amount.ToString("C2")) es mayor que la deuda actual (@Model.CurrentDebt.ToString("C2")).
                    Solo se debitará @Model.CurrentDebt.ToString("C2") de su cuenta.
                </div>
            }
        </div>
    </div>

    <form asp-action="ConfirmPayCreditCard" method="post" class="mt-4">
        <input type="hidden" asp-for="AccountNumber" />
        <input type="hidden" asp-for="Amount" />
        <input type="hidden" asp-for="CardNumber" />
        <input type="hidden" asp-for="CardHolderName" />
        <input type="hidden" asp-for="LastFourDigits" />
        <input type="hidden" asp-for="CurrentDebt" />

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-check-circle"></i> Confirmar Pago
            </button>

            <button type="submit" asp-action="CancelOperation" asp-route-returnAction="PayCreditCard" 
            class="btn btn-secondary btn-lg"> <i class="bi bi-x-circle"></i> Cancelar
            </button>
        </div>
    </form>
</div>
