@model ThirdPartyTransactionViewModel
@{
    ViewData["Title"] = "Transacción a Terceros";
    Layout = "_LayoutTeller";
}

<div class="container mt-4">
    <h2>Transacción a Cuentas de Terceros</h2>

    <form asp-action="ThirdPartyTransaction" method="post" class="mt-3 shadow-sm p-4 bg-light rounded">

        <div class="mb-3">
            <label asp-for="AccountOrigin" class="form-label">Número de cuenta origen</label>
            <input asp-for="AccountOrigin" class="form-control" placeholder="123456789" />
            <span asp-validation-for="AccountOrigin" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AccountDestination" class="form-label">Número de cuenta destino</label>
            <input asp-for="AccountDestination" class="form-control" placeholder="987654321" />
            <span asp-validation-for="AccountDestination" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Monto a transferir</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success">Continuar</button>
            <a asp-controller="CasherDashboard" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>

    </form>
</div>
