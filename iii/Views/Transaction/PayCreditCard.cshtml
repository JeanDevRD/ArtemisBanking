@using ArtemisBanking.Core.Application.ViewModels.Transacciones
@model PayCreditCardViewModel

@{
    ViewData["Title"] = "Pago a Tarjeta de Crédito";
    Layout = "_LayoutTeller";
}

<div class="container mt-4">
    <h2>Pago a Tarjeta de Crédito</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="PayCreditCard" method="post" class="mt-3">
        <div class="mb-3">
         <label asp-for="AccountNumber" class="form-label">Número de cuenta origen</label>
            <input asp-for="AccountNumber"class="form-control" maxlength="9" placeholder="Ej: 123456789" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
            <small class="text-muted">Cuenta desde la cual se realizará el pago</small>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Monto a pagar</label>
            <div class="input-group">
                <span class="input-group-text">RD$</span>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CardNumber" class="form-label">Número de tarjeta de crédito</label>
            <input asp-for="CardNumber" class="form-control" maxlength="16" placeholder="1234567890123456" />
            <span asp-validation-for="CardNumber" class="text-danger"></span>
            <small class="text-muted">Ingrese los 16 dígitos de la tarjeta</small>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-credit-card"></i> Continuar
            </button>

            <a asp-controller="CasherDashboard" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
