@model PayLoanViewModel
@{
    ViewData["Title"] = "Pago a Préstamo";
    Layout = "_LayoutTeller";
}

<div class="container mt-4">
    <h2>Pago a Préstamo</h2>

    <form asp-action="PayLoan" method="post"
          class="mt-3 shadow-sm p-4 bg-light rounded">

        <div class="mb-3">
            <label asp-for="AccountNumber" class="form-label">Número de cuenta origen</label>
            <input asp-for="AccountNumber" class="form-control" placeholder="123456789" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LoanNumber" class="form-label">Número de préstamo (9 dígitos)</label>
            <input asp-for="LoanNumber" class="form-control" maxlength="9" placeholder="123456789" />
            <span asp-validation-for="LoanNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label">Monto a pagar</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success">Continuar</button>
            <a asp-controller="CasherDashboard" asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>

    </form>
</div>
