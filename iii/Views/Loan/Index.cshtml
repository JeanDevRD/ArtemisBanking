@using ArtemisBanking.Core.Application.ViewModel.Loan
@model IPagedList<LoanListViewModel>
@{
    ViewData["Title"] = "Gestión de Préstamos";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h3 class="mb-4">Gestión de Préstamos</h3>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form method="get" class="row g-3 mb-4 shadow-sm p-3 bg-light rounded">
        <div class="col-md-4">
            <label class="form-label">Buscar por cédula</label>
            <input type="text" name="cedula" class="form-control" value="@ViewBag.FilterCedula" placeholder="000-0000000-0" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Estado</label>
            <select name="isActive" class="form-select">
                <option value="">Todos</option>
                <option value="true" selected="@(ViewBag.IsActive == true)">Activos</option>
                <option value="false" selected="@(ViewBag.IsActive == false)">Completados</option>
            </select>
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a asp-action="SelectClient" class="btn btn-success w-100">Asignar Préstamo</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Cliente</th>
                    <th>Monto Capital</th>
                    <th>Total Cuotas</th>
                    <th>Cuotas Pagadas</th>
                    <th>Monto Pendiente</th>
                    <th>Tasa Interés</th>
                    <th>Plazo (meses)</th>
                    <th>Estado Pago</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var loan in Model)
                    {
                        <tr>
                            <td>@loan.ClientFullName</td>
                            <td>@loan.CapitalAmount.ToString("C2")</td>
                            <td>@loan.TotalInstallments</td>
                            <td>@loan.PaidInstallments</td>
                            <td>@loan.OutstandingAmount.ToString("C2")</td>
                            <td>@loan.InterestRate%</td>
                            <td>@loan.TermInMonths</td>
                            <td>
                                <span class="badge bg-@(loan.PaymentStatus == "Al día" ? "success" : "danger")">
                                    @loan.PaymentStatus
                                </span>
                            </td>
                            <td>
                                <a asp-action="Detail" asp-route-loanId="@loan.LoanId" class="btn btn-sm btn-info">Ver Detalles</a>
                                <a asp-action="Edit" asp-route-loanId="@loan.LoanId" class="btn btn-sm btn-warning">Editar</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-4"> No se encontraron préstamos con los filtros aplicados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, cedula = ViewBag.FilterCedula, isActive = ViewBag.IsActive }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
    </div>
</div>