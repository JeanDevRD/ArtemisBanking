@{
    ViewData["Title"] = "Realizar Transferencia";
}

<div class="container mt-4 col-md-8">
    <h3>Centro de Transferencias</h3>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Transferencia a Beneficiario</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="TransferirABeneficiario" class="bg-light p-3 rounded">
                        <div class="form-group mb-3">
                            <label>Cuenta Origen</label>
                            <select name="cuentaId" class="form-control" required>
                                <option value="">-- Seleccione cuenta --</option>
                                @if (ViewBag.Cuentas != null)
                                {
                                    @foreach (var c in ViewBag.Cuentas)
                                    {
                                        <option value="@c.Id">@c.AccountNumber - Saldo: @c.Balance.ToString("C2")</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Beneficiario</label>
                            <select name="beneficiarioId" class="form-control" required>
                                <option value="">-- Seleccione beneficiario --</option>
                                @if (ViewBag.Beneficiarios != null)
                                {
                                    @foreach (var b in ViewBag.Beneficiarios)
                                    {
                                        <option value="@b.Id">@b.FirstName @b.LastName (@b.Bank)</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Monto</label>
                            <input type="number" name="monto" class="form-control" step="0.01" min="0.01" required />
                        </div>

                        <div class="form-group mb-3">
                            <label>Concepto</label>
                            <textarea name="concepto" class="form-control" rows="2"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Transferir</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Transferencia Interna</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="TransferirInterna" class="bg-light p-3 rounded">
                        <div class="form-group mb-3">
                            <label>Cuenta Origen</label>
                            <select name="cuentaOrigen" class="form-control" required>
                                <option value="">-- Seleccione cuenta --</option>
                                @if (ViewBag.Cuentas != null)
                                {
                                    @foreach (var c in ViewBag.Cuentas)
                                    {
                                        <option value="@c.Id">@c.AccountNumber - Saldo: @c.Balance.ToString("C2")</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Cuenta Destino</label>
                            <select name="cuentaDestino" class="form-control" required>
                                <option value="">-- Seleccione cuenta destino --</option>
                                @if (ViewBag.Cuentas != null)
                                {
                                    @foreach (var c in ViewBag.Cuentas)
                                    {
                                        <option value="@c.Id">@c.AccountNumber</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Monto</label>
                            <input type="number" name="monto" class="form-control" step="0.01" min="0.01" required />
                        </div>

                        <button type="submit" class="btn btn-info w-100">Transferir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>
