@model ArtemisBanking.Core.Application.Dtos.Beneficiary.BeneficiaryDto
@{
    ViewData["Title"] = "Agregar Beneficiario";
}

<div class="container mt-4">
    <h2>Agregar beneficiario</h2>
    <form asp-action="Agregar" method="post">
        <div class="mb-3">
            <label>Nombre</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Apellido</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Cédula</label>
            <input asp-for="UserId" class="form-control" maxlength="11" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Número de cuenta</label>
            <input asp-for="AccountNumber" class="form-control" maxlength="9" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>

