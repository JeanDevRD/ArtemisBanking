@model ArtemisBanking.Core.Application.Dtos.Beneficiary.BeneficiaryDto

@{
    ViewData["Title"] = "Agregar Beneficiario";
}

<div class="container mt-4 col-md-6">
    <h3>Agregar Beneficiario</h3>

    <form asp-action="Agregar" method="post" class="shadow-sm p-4 bg-light rounded">
        <div class="form-group mb-3">
            <label>Nombre</label>
            <input asp-for="FirstName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Apellido</label>
            <input asp-for="LastName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Cédula</label>
            <input asp-for="UserId" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Número de Cuenta</label>
            <input asp-for="AccountNumber" class="form-control" maxlength="9" required />
        </div>

        <button type="submit" class="btn btn-success w-100">Guardar</button>
        <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Volver</a>

        @Html.ValidationSummary(true, "", new { @class = "text-danger mt-2" })
    </form>
</div>


