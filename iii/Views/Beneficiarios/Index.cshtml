@model IPagedList<ArtemisBanking.Core.Application.Dtos.Beneficiary.BeneficiaryDto>
@{
    ViewData["Title"] = "Mis Beneficiarios";
}

<div class="container mt-4">
    <h3>Mis Beneficiarios</h3>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="text-end mb-3">
        <a asp-action="Agregar" class="btn btn-primary">+ Agregar Beneficiario</a>
    </div>

    <table class="table table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nombre Completo</th>
                <th>Cédula</th>
                <th>Banco</th>
                <th>Tipo Cuenta</th>
                <th>Número de Cuenta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.FirstName @b.LastName</td>
                    <td>@b.Cedula</td>
                    <td>@b.Bank</td>
                    <td><span class="badge bg-info">@b.AccountTypeName</span></td>
                    <td>@b.AccountNumber</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@b.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('¿Seguro que deseas eliminar este beneficiario?');">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- PAGINACIÓN -->
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
    </div>
</div>