@model ArtemisBankingWebApp.Models.TransaccionViewModel

<h4>Detalle de Transacción</h4>
<p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Tipo:</strong> @Model.Tipo</p>
<p><strong>Origen:</strong> @Model.Origen</p>
<p><strong>Destino:</strong> @Model.Destino</p>
<p><strong>Monto:</strong> @Model.Monto.ToString("C")</p>
<p><strong>Estado:</strong> @Model.Estado</p>
<p><strong>Referencia:</strong> @Model.Referencia</p>
<p><strong>Descripción:</strong> @Model.Descripcion</p>
