@{
    Layout = "_LayoutClient";
}

<!-- English copy of Transferencias/Index.cshtml -->
@{ ViewData["Title"] = "Transfers"; }

<div class="container mt-4">
    <h3 class="mb-4">Transferencias</h3>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Transferencia a Terceros</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SendToThirdParty" class="bg-light p-3 rounded">
                        <div class="form-group mb-3">
                            <label>Cuenta Origen</label>
                            <select name="sourceAccountId" class="form-control" required>
                                <option value="">-- Seleccione cuenta --</option>
                                @if (ViewBag.Accounts != null)
                                {
                                    foreach (var c in ViewBag.Accounts)
                                    {
                                        <option value="@c.Id">@c.AccountNumber - Saldo: @c.Balance.ToString("C2")</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Beneficiario</label>
                            <select name="beneficiaryId" class="form-control" required>
                                <option value="">-- Seleccione beneficiario --</option>
                                @if (ViewBag.Beneficiaries != null)
                                {
                                    foreach (var b in ViewBag.Beneficiaries)
                                    {
                                        <option value="@b.Id">@b.FirstName @b.LastName (@b.AccountNumber)</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Monto</label>
                            <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
                        </div>

                        <div class="form-group mb-3">
                            <label>Concepto</label>
                            <textarea name="concept" class="form-control" rows="2"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Transferir</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Transferencia Interna</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="TransferIntern" class="bg-light p-3 rounded">
                        <div class="form-group mb-3">
                            <label>Cuenta Origen</label>
                            <select name="sourceAccount" class="form-control" required>
                                <option value="">-- Seleccione cuenta --</option>
                                @if (ViewBag.Accounts != null)
                                {
                                    @foreach (var c in ViewBag.Accounts)
                                    {
                                        <option value="@c.Id">@c.AccountNumber - Saldo: @c.Balance.ToString("C2")</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Cuenta Destino</label>
                            <select name="destinationAccount" class="form-control" required>
                                <option value="">-- Seleccione cuenta destino --</option>
                                @if (ViewBag.Accounts != null)
                                {
                                    @foreach (var c in ViewBag.Accounts)
                                    {
                                        <option value="@c.Id">@c.AccountNumber</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label>Monto</label>
                            <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
                        </div>

                        <button type="submit" class="btn btn-info w-100">Transferir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>
