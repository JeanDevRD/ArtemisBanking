@model ArtemisBanking.Core.Application.Dtos.SavingsAccount.SavingsAccountDto
@{
    ViewData["Title"] = "Realizar Transferencia";
}

<div class="container mt-4 col-md-6">
    <h3>Transferencia desde Cuenta @ViewBag.AccountNumber</h3>
    
    <div class="alert alert-info">
        <strong>Saldo Disponible:</strong> @ViewBag.AvailableBalance?.ToString("C2")
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-controller="Transfers" asp-action="Index" method="post" class="bg-light p-4 rounded">
                <input type="hidden" name="accountId" value="@ViewBag.AccountId" />

                <div class="form-group mb-3">
                    <label>Beneficiario</label>
                    <select name="beneficiaryId" class="form-control" required>
                        <option value="">-- Seleccione un beneficiario --</option>
                        @if (ViewBag.Beneficiaries != null)
                        {
                            @foreach (var b in ViewBag.Beneficiaries)
                            {
                                <option value="@b.Id">@b.FirstName @b.LastName (@b.AccountNumber)</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label>Monto a Transferir</label>
                    <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required placeholder="0.00" />
                </div>

                <div class="form-group mb-3">
                    <label>Concepto (Opcional)</label>
                    <textarea name="concept" class="form-control" rows="3" placeholder="Descripción de la transferencia"></textarea>
                </div>

                <button type="submit" class="btn btn-success w-100">Continuar</button>
                <a asp-controller="Accounts" asp-action="Detail" asp-route-id="@ViewBag.AccountId" class="btn btn-outline-secondary w-100 mt-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>
