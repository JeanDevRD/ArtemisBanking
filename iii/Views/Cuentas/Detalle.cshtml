@model ArtemisBanking.Core.Application.Dtos.SavingsAccount.SavingsAccountDto
@{
    ViewData["Title"] = "Detalle de Cuenta";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h3>Detalle de Cuenta de Ahorro</h3>
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Número de Cuenta:</strong> @Model.AccountNumber</p>
                            <p><strong>Tipo de Cuenta:</strong> @(Model.Type == 1 ? "Principal" : "Secundaria")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Balance:</strong> <span class="h4 text-success">@Model.Balance.ToString("C2")</span></p>
                            <p><strong>Estado:</strong> <span class="badge bg-@(Model.IsActive ? "success" : "danger")">@(Model.IsActive ? "Activa" : "Inactiva")</span></p>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Fecha de Apertura:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h5>Operaciones Disponibles</h5>
                <div class="btn-group" role="group">
                    <a asp-controller="Accounts" asp-action="Transfer" asp-route-id="@Model.Id" class="btn btn-primary">Transferir</a>
                    <a asp-controller="Accounts" asp-action="Deposit" asp-route-id="@Model.Id" class="btn btn-success">Depositar</a>
                    <a asp-controller="Accounts" asp-action="Withdraw" asp-route-id="@Model.Id" class="btn btn-warning">Retirar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <h5>Últimas Transacciones</h5>
            @if (ViewBag.Transactions != null && ViewBag.Transactions.Any())
            {
                <div class="list-group">
                    @foreach (var t in ViewBag.Transactions)
                    {
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">@t.Source</h6>
                                <small>@t.Date.ToString("dd/MM/yyyy")</small>
                            </div>
                            <p class="mb-1">Monto: @t.Amount.ToString("C2")</p>
                            <small>@t.Type</small>
                        </a>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Sin transacciones recientes.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</div>
