@model ArtemisBanking.Core.Application.Dtos.SavingsAccount.SavingsAccountDto
@{
    ViewData["Title"] = "Realizar Depósito";
}

<div class="container mt-4 col-md-6">
    <h3>Depósito a Cuenta @ViewBag.CuentaNumero</h3>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" class="bg-light p-4 rounded">
                <input type="hidden" name="cuentaId" value="@ViewBag.CuentaId" />

                <div class="form-group mb-3">
                    <label>Monto a Depositar</label>
                    <input type="number" name="monto" class="form-control" step="0.01" min="0.01" required placeholder="0.00" />
                </div>

                <div class="form-group mb-3">
                    <label>Método de Depósito</label>
                    <select name="metodo" class="form-control" required>
                        <option value="">-- Seleccione un método --</option>
                        <option value="Efectivo">Efectivo en Sucursal</option>
                        <option value="Transferencia">Transferencia Bancaria</option>
                        <option value="Cheque">Depósito de Cheque</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label>Concepto</label>
                    <textarea name="concepto" class="form-control" rows="3" placeholder="Descripción del depósito"></textarea>
                </div>

                <button type="submit" class="btn btn-success w-100">Continuar</button>
                <a asp-controller="Cuentas" asp-action="Detalle" asp-route-id="@ViewBag.CuentaId" class="btn btn-outline-secondary w-100 mt-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>
