@model ArtemisBanking.Core.Application.Dtos.SavingsAccount.SavingsAccountDto
@{
    ViewData["Title"] = "Realizar Retiro";
}

<div class="container mt-4 col-md-6">
    <h3>Retiro desde Cuenta @ViewBag.CuentaNumero</h3>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" class="bg-light p-4 rounded">
                <input type="hidden" name="cuentaId" value="@ViewBag.CuentaId" />

                <div class="form-group mb-3">
                    <label>Monto a Retirar</label>
                    <input type="number" name="monto" class="form-control" step="0.01" min="0.01" required placeholder="0.00" />
                </div>

                <div class="form-group mb-3">
                    <label>Tipo de Retiro</label>
                    <select name="tipo" class="form-control" required>
                        <option value="">-- Seleccione tipo --</option>
                        <option value="Ventanilla">Retiro en Ventanilla</option>
                        <option value="Cajero">Retiro en Cajero Automático</option>
                        <option value="Transferencia">Transferencia a Otra Cuenta</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label>Concepto</label>
                    <textarea name="concepto" class="form-control" rows="3" placeholder="Motivo del retiro"></textarea>
                </div>

                <button type="submit" class="btn btn-success w-100">Continuar</button>
                <a asp-controller="Cuentas" asp-action="Detalle" asp-route-id="@ViewBag.CuentaId" class="btn btn-outline-secondary w-100 mt-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>
