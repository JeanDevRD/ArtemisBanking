@model IPagedList<ArtemisBankingWebApp.Models.ProductViewModel>
@{
    ViewData["Title"] = "Mis Productos";
}
<div class="container-fluid mt-4">
    <h2 class="mb-4">Mis Productos Financieros</h2>

    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <h5>Saldo Total</h5>
                    <h3>@ViewBag.TotalBalance</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h5>Deuda Total</h5>
                    <h3>@ViewBag.TotalDebt</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-warning text-dark">
                <div class="card-body">
                    <h5>Próximo Pago</h5>
                    <h3>@ViewBag.NextPayment</h3>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tipo</th>
                <th>Número</th>
                <th>Saldo / Monto</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Type</td>
                    <td>@p.Number</td>
                    <td>@p.Amount.ToString("C2")</td>
                    <td><span class="badge bg-@(p.Status == "Active" || p.Status == "Active" ? "success" : "secondary")">@p.Status</span></td>
                    <td>
                        @* Detail link: map to appropriate English controller and route parameter names *@
                        @if (p.TypeId == 1)
                        {
                            <a asp-controller="SavingsAccount" asp-action="Detail" asp-route-accountId="@p.Number" class="btn btn-sm btn-info">Ver</a>
                        }
                        else if (p.TypeId == 2)
                        {
                            <a asp-controller="Loan" asp-action="Detail" asp-route-loanId="@p.Id" class="btn btn-sm btn-info">Ver</a>
                        }
                        else
                        {
                            <a asp-controller="CreditCard" asp-action="Detail" asp-route-cardId="@p.Number" class="btn btn-sm btn-info">Ver</a>
                        }

                        @* Operate link: Savings -> Transfers, Loan -> Loan Detail, Card -> CreditCard Detail *@
                        @if (p.TypeId == 1)
                        {
                            <a asp-controller="Transfers" asp-action="Index" asp-route-accountId="@p.Id" class="btn btn-sm btn-primary">Operar</a>
                        }
                        else if (p.TypeId == 2)
                        {
                            <a asp-controller="Loan" asp-action="Detail" asp-route-loanId="@p.Id" class="btn btn-sm btn-primary">Operar</a>
                        }
                        else
                        {
                            <a asp-controller="CreditCard" asp-action="Detail" asp-route-cardId="@p.Number" class="btn btn-sm btn-primary">Operar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        new PagedListRenderOptions { LiElementClasses = new[] { "page-item" }, PageClasses = new[] { "page-link" } })
    </div>
</div>
