@model IPagedList<ArtemisBankingWebApp.Models.ProductoViewModel>
@{
    ViewData["Title"] = "Mis Productos";
}
<div class="container-fluid mt-4">
    <h2 class="mb-4">Mis Productos Financieros</h2>

    <!-- Indicadores -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <h5>Saldo Total</h5>
                    <h3>@ViewBag.SaldoTotal</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h5>Deuda Total</h5>
                    <h3>@ViewBag.DeudaTotal</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-info text-white">
                <div class="card-body">
                    <h5>Próximo Pago (Préstamo)</h5>
                    <h3>@ViewBag.ProximoPago</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-warning text-dark">
                <div class="card-body">
                    <h5>Pago Mínimo (Tarjeta)</h5>
                    <h3>@ViewBag.ProximoPagoMinimo</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Listado -->
    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tipo</th>
                <th>Número</th>
                <th>Saldo / Monto</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Tipo</td>
                        <td>@p.Numero</td>
                        <td>@p.Monto.ToString("C2")</td>
                        <td><span class="badge bg-@(p.Estado == "Activa" || p.Estado == "Activo" ? "success" : "secondary")">@p.Estado</span></td>
                        <td>
                            <a asp-controller="@(p.TipoId == 1 ? "Cuentas" : p.TipoId == 2 ? "Prestamos" : "Tarjetas")"
                               asp-action="Detalle" asp-route-id="@p.Id" class="btn btn-sm btn-info">Ver detalle</a>
                            @if (p.TipoId == 1)
                            {
                                <a asp-controller="Transferencias" asp-action="Index" asp-route-cuentaId="@p.Id" class="btn btn-sm btn-primary">Transferir</a>
                            }
                            else if (p.TipoId == 2)
                            {
                                <a asp-controller="Prestamos" asp-action="PagarCuota" asp-route-id="@p.Id" class="btn btn-sm btn-primary">Pagar cuota</a>
                            }
                            else if (p.TipoId == 3)
                            {
                                <a asp-controller="Tarjetas" asp-action="PagarTarjeta" asp-route-id="@p.Id" class="btn btn-sm btn-primary">Pagar</a>
                                <a asp-controller="Avances" asp-action="Index" asp-route-tarjetaId="@p.Id" class="btn btn-sm btn-secondary">Avance</a>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">No tienes productos registrados.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Paginación -->
    @if (Model.PageCount > 1)
    {
        <div class="d-flex justify-content-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
            new PagedListRenderOptions { LiElementClasses = new[] { "page-item" }, PageClasses = new[] { "page-link" } })
        </div>
    }
</div>
