@model IPagedList<ArtemisBankingWebApp.Models.ProductoViewModel>
@{
    ViewData["Title"] = "Mis Productos";
}
<div class="container-fluid mt-4">
    <h2 class="mb-4">Mis Productos Financieros</h2>

    <!-- Indicadores -->
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <h5>Saldo Total</h5>
                    <h3>@ViewBag.SaldoTotal</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h5>Deuda Total</h5>
                    <h3>@ViewBag.DeudaTotal</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-warning text-dark">
                <div class="card-body">
                    <h5>Próximo Pago</h5>
                    <h3>@ViewBag.ProximoPago</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Listado -->
    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Tipo</th>
                <th>Número</th>
                <th>Saldo / Monto</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Tipo</td>
                    <td>@p.Numero</td>
                    <td>@p.Monto.ToString("C2")</td>
                    <td><span class="badge bg-@(p.Estado == "Activa" || p.Estado == "Activo" ? "success" : "secondary")">@p.Estado</span></td>
                    <td>
                        <a asp-controller="@(p.TipoId == 1 ? "Cuentas" : p.TipoId == 2 ? "Prestamos" : "Tarjetas")"
                           asp-action="Detalle" asp-route-id="@p.Id" class="btn btn-sm btn-info">Ver</a>
                        <a asp-controller="@(p.TipoId == 1 ? "Transferencias" : "Pagos")"
                           asp-action="@(p.TipoId == 1 ? "Index" : p.TipoId == 2 ? "PagarCuota" : "PagarTarjeta")"
                           asp-route-id="@p.Id" class="btn btn-sm btn-primary">Operar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Paginación -->
    <div class="d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        new PagedListRenderOptions { LiElementClasses = new[] { "page-item" }, PageClasses = new[] { "page-link" } })
    </div>
</div>
