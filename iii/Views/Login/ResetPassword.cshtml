@model ResetPasswordRequestViewModel
@{
    Layout = "_LayoutAnonymous";
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center py-3">
        <h3 class="mb-0">
            <i class="bi bi-shield-lock"></i> Restablecer Contraseña
        </h3>
        <small>Ingresa tu nueva contraseña</small>
    </div>
    <div class="card-body p-4">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-@(ViewBag.IsError == true ? "danger" : "success") alert-dismissible fade show">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label class="form-label fw-bold">Nueva Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" type="password" class="form-control"
                           placeholder="Ingrese su nueva contraseña" required />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="text-muted d-block mt-1">
                    La contraseña debe tener al menos 8 caracteres, incluir mayúsculas, minúsculas, números y caracteres especiales
                </small>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Confirmar Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control"
                           placeholder="Confirme su nueva contraseña" required />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                <i class="bi bi-check-circle"></i> Restablecer Contraseña
            </button>

            <div class="text-center">
                <a asp-controller="Login" asp-action="Login" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Volver al inicio de sesión
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}