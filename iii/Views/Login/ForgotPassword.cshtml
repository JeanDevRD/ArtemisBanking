@{
    Layout = "_LayoutAnonymous";
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark text-center py-3">
        <h3 class="mb-0">
            <i class="bi bi-key"></i> Recuperar Contraseña
        </h3>
        <small>Ingresa tu nombre de usuario para recibir instrucciones</small>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-@(ViewBag.IsError == true ? "danger" : "success") alert-dismissible fade show">
                @ViewBag.Message
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Nombre de Usuario</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input type="text" name="userName" class="form-control" placeholder="Ingrese su nombre de usuario" required autofocus />
                </div>
                <small class="text-muted">
                    Se enviará un enlace de recuperación a tu correo electrónico registrado
                </small>
            </div>

            <button type="submit" class="btn btn-warning w-100 py-2 mb-3">
                <i class="bi bi-envelope"></i> Enviar Enlace de Recuperación
            </button>

            <div class="text-center">
                <a asp-controller="Login" asp-action="Login" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Volver al inicio de sesión
                </a>
            </div>
        </form>
    </div>
</div>
