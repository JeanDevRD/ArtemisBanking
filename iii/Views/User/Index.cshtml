@model HomeUser

@{
    ViewData["Title"] = "Usuarios";
    Layout = "_LayoutAdmin";
}

<h2 class="text-center">Gestión de usuarios</h2>

<form asp-action="Index" asp-controller="User" method="get" class="row g-3 align-items-center mb-3">
    <div class="col-auto">
        <label for="role" class="col-form-label fw-bold">Filtrar por rol:</label>
    </div>
    <div class="col-auto">
        <select id="role" name="role" class="form-select">
            <option value="">Todos</option>
            <option value="Admin">Admin</option>
            <option value="Teller">Teller</option>
            <option value="Client">Client</option>
        </select>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">
            <i class="bi bi-funnel"></i> Aplicar
        </button>
    </div>
</form>

<div class="mb-3 text-end">
    <a class="btn btn-primary" asp-action="Create" asp-controller="User"><i class="bi bi-person-plus"></i> Crear nuevo usuario</a>
</div>

@if (Model.Users.Count() == 0)
{
    <p>No users</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre de Usuario</th>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Tipo de Usuario</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.IdentificationNumber</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Edit" asp-route-IdUser="@user.Id" asp-controller="User">Editar</a>
                        @if (user.IsActive)
                        {
                            <a class="btn btn-danger" asp-action="IsActivatedUser" asp-route-IdUser="@user.Id" asp-route-StateUser="@user.IsActive" asp-controller="User">Desactivar</a>
                        }
                        else
                        {
                            <a class="btn btn-success" asp-action="IsActivatedUser" asp-route-IdUser="@user.Id" asp-route-StateUser="@user.IsActive" asp-controller="User">Activar</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Anterior</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
}
