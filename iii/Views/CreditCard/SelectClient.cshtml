@using ArtemisBanking.Core.Application.ViewModel.Loan
@model List<ElegibleUserForCreditCardViewModel>

@{
    ViewData["Title"] = "Seleccionar Cliente para Tarjeta";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h3 class="mb-4">Seleccionar Cliente para Tarjeta de Crédito</h3>

    <div class="alert alert-info">
        <strong>Ingreso Mensual Promedio del Sistema:</strong>
        @if (Model != null && Model.Any())
        {
            var avgIncome = Model.Average(c => c.MonthlyIncome);
            @avgIncome.ToString("C2")
        }
        else
        {
            <span>No disponible</span>
        }
    </div>

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="cedula" class="form-control" placeholder="Buscar por cédula..." />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Ingreso Mensual</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.IdentificationNumber</td>
                            <td>@client.FullName</td>
                            <td>@client.Email</td>
                            <td>@client.MonthlyIncome.ToString("C2")</td>
                            <td>
                                <a asp-action="Create"asp-route-userId="@client.Id"class="btn btn-sm btn-success">Seleccionar</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                       <td colspan="5" class="text-center text-muted py-4">No hay clientes elegibles para asignar tarjeta de crédito</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
